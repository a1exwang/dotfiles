#!/usr/bin/env ruby
require 'resolv'

def ping(addr)
 	result = `ping #{addr} -c 10 -q -W 5 2> /dev/null`

	if result =~ /=\s+([.\d]+)\/([.\d]+)\/([.\d]+)\/([.\d]+)/
		avg_delay = $2
	else
		avg_delay = nil
	end
	if result =~ /(\d+%) packet loss/
    loss_rate = $1.to_f
	else
    loss_rate = 100
    begin
      Resolv.getaddress('www.baidu.com')
    rescue
      loss_rate = -1
    end
	end

  if loss_rate == 0
    return "%.0fms" % avg_delay.to_f, :ok
  elsif loss_rate == -1
    return "DNS failure", :dns
  else
    return (avg_delay ? (avg_delay + "ms/") : '') + 
      ("%0.0f%% loss" % loss_rate), :ok
  end
end


if ARGV.size == 1
  str, status = ping ARGV[0]
	puts str
elsif ARGV.size == 2
	loop do
		str, status = ping ARGV[0]
    sleep 2 if status == :dns
		File.write(ARGV[1], str + "\r")
	end
else
	puts "wrong argument"
	exit
end


