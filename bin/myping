#!/usr/bin/env ruby
require 'resolv'

def ping(addr)
 	result = `ping #{addr} -c 10 -q -W 5`

	if result =~ /=\s+([.\d]+)\/([.\d]+)\/([.\d]+)\/([.\d]+)/
		avg_delay = $2
	else
		avg_delay = nil
	end
	if result =~ /(\d+%) packet loss/
    loss_rate = $1.to_f
	else
    loss_rate = 100
    begin
      Resolv.getaddress('www.baidu.com')
    rescue
      loss_rate = -1
    end
	end

  if loss_rate == 0
    "%.0fms" % avg_delay.to_f
  elsif loss_rate == -1
    "DNS failure"
  else
    (avg_delay ? (avg_delay + "ms/") : '') + 
      ("%0.0f%% loss" % loss_rate)
  end
end


if ARGV.size == 1
	puts ping ARGV[0]
elsif ARGV.size == 2
	loop do
		str = ping ARGV[0]
		File.write(ARGV[1], str)
	end
else
	puts "wrong argument"
	exit
end


